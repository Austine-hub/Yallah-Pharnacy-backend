{
  "compilerOptions": {
    /* === Target and Module System === */
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "moduleDetection": "force",

    /* === Module and Interop === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,

    /* === Project Structure === */
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,

    /* === Type Checking === */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /* âœ… Node environment support */
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],

    /* === Build Optimization for CI/CD (Render) === */
    "noEmitOnError": false,          // Prevents build fail due to type-only warnings
    "incremental": true,             // Speeds up local builds
    "newLine": "lf"
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}




